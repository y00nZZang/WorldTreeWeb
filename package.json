{
  "name": "worldtreeweb",
  "version": "0.0.1",
  "private": true,
  "description": "Map-based Christmas Tree Sharing App - Monorepo",
  "scripts": {
    "dev:frontend": "nx serve frontend",
    "dev:backend": "nx serve backend",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "biome check --write .",
    "format:check": "biome ci ."
  },
  "workspaces": ["frontend", "backend", "infra"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nx/jest": "^20.2.0",
    "@nx/js": "^20.2.0",
    "@nx/nest": "^20.2.0",
    "@nx/react": "^20.2.0",
    "@nx/vite": "^20.2.0",
    "@nx/webpack": "^20.2.0",
    "@nx/workspace": "^20.2.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "^20.2.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
